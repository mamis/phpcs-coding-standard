<?xml version="1.0"?>
<ruleset name="Mamis">
    <description>The Mamis coding standard.</description>

    <!-- Include the whole Symfony Standard -->
    <rule ref="Symfony">
        <exclude name="Symfony.Commenting.ClassComment"/>
        <exclude name="Symfony.Commenting.FunctionComment"/>
        <exclude name="Symfony.Commenting.License"/>
        <exclude name="Symfony.Commenting.Annotations"/>
        <exclude name="Symfony.ControlStructure.YodaConditions"/>
        <exclude name="Symfony.ControlStructure.IdenticalComparison.Warning"/>
        <exclude name="Symfony.NamingConventions.ValidClassName.InvalidAbstractName"/>
        <exclude name="Symfony.NamingConventions.ValidClassName.InvalidTraitName"/>
        <exclude name="Symfony.NamingConventions.ValidClassName.InvalidInterfaceName"/>
        <exclude name="Symfony.Functions.Arguments.Invalid"/>

        <exclude name="PSR2.ControlStructures.ControlStructureSpacing.SpacingAfterOpenBrace"/>
        <exclude name="Squiz.ControlStructures.ControlSignature.SpaceAfterCloseBrace"/>
        <exclude name="Zend.NamingConventions.ValidVariableName.NotCamelCaps"/>
    </rule>

    <!-- Enforce 1 space between concatenation and allow new lines -->
    <rule ref="Squiz.Strings.ConcatenationSpacing">
        <properties>
            <property name="spacing" value="1"/>
            <property name="ignoreNewlines" value="true"/>
        </properties>
    </rule>

    <!-- Ignore laravel db migrations requiring a namespace -->
    <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
        <exclude-pattern>*/database/migrations/*</exclude-pattern>
    </rule>
</ruleset>
